<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardviewtambah"
        android:layout_margin="5dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginTop="5dp"
            android:id="@+id/constrain"
            app:layout_constraintTop_toTopOf="@+id/cardviewtambah"
            app:layout_constraintStart_toStartOf="@id/cardviewtambah"
            app:layout_constraintEnd_toEndOf="@id/cardviewtambah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:fontFamily="sans-serif-black"
                app:layout_constraintStart_toStartOf="@id/constrain"
                app:layout_constraintTop_toTopOf="@+id/constrain"
                android:id="@+id/tv1"
                android:elegantTextHeight="true"
                android:text="Batas Awal"
                android:layout_width="140dp"
                android:layout_height="40dp"/>
            <FrameLayout
                app:layout_constraintStart_toEndOf="@+id/tv1"
                app:layout_constraintTop_toTopOf="@+id/constrain"
                android:id="@+id/frame1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/spinner11"
                    android:layout_width="120dp"
                    android:layout_height="40dp"></androidx.appcompat.widget.AppCompatSpinner>
            </FrameLayout>
            <FrameLayout
                app:layout_constraintStart_toEndOf="@+id/frame1"
                app:layout_constraintTop_toTopOf="@+id/constrain"
                android:id="@+id/frame2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/spinner12"
                    android:layout_width="120dp"
                    android:layout_height="40dp"></androidx.appcompat.widget.AppCompatSpinner>
            </FrameLayout>


            <TextView
                android:elegantTextHeight="true"
                android:layout_marginTop="15dp"
                android:fontFamily="sans-serif-black"
                android:id="@+id/tv2"
                app:layout_constraintStart_toStartOf="@+id/constrain"
                app:layout_constraintTop_toBottomOf="@+id/tv1"
                android:text="Batas Akhir"
                android:layout_width="140dp"
                android:layout_height="40dp"/>
            <FrameLayout
                android:layout_marginTop="15dp"
                app:layout_constraintStart_toEndOf="@id/tv2"
                app:layout_constraintTop_toBottomOf="@id/frame1"
                android:id="@+id/frame3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/spinner21"
                    android:layout_width="120dp"
                    android:layout_height="40dp"></androidx.appcompat.widget.AppCompatSpinner>
            </FrameLayout>
            <FrameLayout
                android:layout_marginTop="15dp"
                app:layout_constraintStart_toEndOf="@id/frame3"
                app:layout_constraintTop_toBottomOf="@id/frame2"
                android:id="@+id/frame4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/spinner22"
                    android:layout_width="120dp"
                    android:layout_height="40dp"></androidx.appcompat.widget.AppCompatSpinner>
            </FrameLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <ImageView
        app:layout_constraintStart_toEndOf="@+id/cardviewtambah"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        android:visibility="invisible"
        android:id="@+id/image_remove1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_delete_24"
        ></ImageView>


</androidx.constraintlayout.widget.ConstraintLayout>