<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".classactivity.ActivityCek">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutkedua"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            app:layout_constraintStart_toStartOf="@+id/layoutkedua"
            app:layout_constraintTop_toTopOf="@+id/layoutkedua"
            android:id="@+id/fr1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/spin1_cek"
                android:layout_width="120dp"
                android:layout_height="40dp"></androidx.appcompat.widget.AppCompatSpinner>

        </FrameLayout>
        <FrameLayout
            android:id="@+id/fr2"
            app:layout_constraintStart_toEndOf="@+id/fr1"
            app:layout_constraintTop_toTopOf="@+id/layoutkedua"
            app:layout_constraintEnd_toStartOf="@id/fr3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/spin2_cek"
                android:layout_width="120dp"
                android:layout_height="40dp"></androidx.appcompat.widget.AppCompatSpinner>

        </FrameLayout>
        <FrameLayout
            android:id="@+id/fr3"
            app:layout_constraintTop_toTopOf="@+id/layoutkedua"
            app:layout_constraintEnd_toEndOf="@+id/layoutkedua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/spin3_cek"
                android:layout_width="120dp"
                android:layout_height="40dp"></androidx.appcompat.widget.AppCompatSpinner>
        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <Button
        android:background="@drawable/edit_text_background"
        app:layout_constraintTop_toBottomOf="@+id/layoutkedua"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/btn_cek"
        android:text="Cek"
        android:onClick="onClick"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="40dp"/>
    <TextView
        app:layout_constraintTop_toBottomOf="@+id/btn_cek"
        android:textAlignment="center"
        android:textSize="45sp"
        android:id="@+id/tv1_cek_kondisi"
        android:text=""
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_margin="10dp"
        android:id="@+id/rv_cek"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv1_cek_kondisi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>