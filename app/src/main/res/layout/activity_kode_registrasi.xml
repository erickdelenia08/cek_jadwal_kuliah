<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".classactivity.KodeRegistrasi">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="50dp"
        android:id="@+id/textinput_layout_kode"
        android:layout_width="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content">
        <EditText
            android:textAlignment="center"
            android:background="@drawable/edit_text_background"
            android:maxLines="1"
            android:drawableEnd="@drawable/ic_baseline_vpn_key_24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:id="@+id/etkodeakses"
            android:hint="kode akses"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/tv_ket"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:textColor="@color/merah"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="silahkan minta ke admin"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textinput_layout_kode" />

    <Button
        android:layout_marginTop="28dp"
        android:id="@+id/btn_ask_key"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/edit_text_background"
        android:onClick="onClick"
        android:text="verifikasi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_ket" />


</androidx.constraintlayout.widget.ConstraintLayout>